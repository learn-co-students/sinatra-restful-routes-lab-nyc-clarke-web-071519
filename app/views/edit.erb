<h2><a href="/recipes/<%= @recipe.id %>"><%= @recipe.name %></a></h2>

<form action="/recipes/<%= @recipe.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Recipe Name: <input type="text" name="name" value="<%= @recipe.name %>"></p>
  <p>Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p>Cook Time (minutes): <input type="number" name="cook_time" value="<%= @recipe.cook_time %>"></p>
  <input type="submit">
</form>